<Window x:Class="Lektionsuppgift_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektionsuppgift_1"
        mc:Ignorable="d"
        Title="Area Kalkylator" Height="300" Width="250" Background="#F0F0F0">
        <StackPanel Margin="5">

            <Label Margin="5">Ange Bredd</Label>
            <TextBox Margin="5" Height="20" Name="bredd"></TextBox>

            <Label Margin="5">Ange Höjd</Label>
            <TextBox Margin="5" Height="20" Name="höjd"></TextBox>

            <Button Margin="5" Height="30" Click="KalkyleraArea">Kalkylera</Button>

            <Label Margin="5">Area</Label>
            <TextBox Margin="5" Height="20" Name="area" IsReadOnly="True"></TextBox>
            
        </StackPanel>
</Window>
