<Window x:Class="Lektionsuppgift_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektionsuppgift_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" Background="#F0F0F0">
        <StackPanel Margin="10" >

            <Label>Ange Bredd</Label>
            <TextBox Height="30" Width="230" Name="bredd"></TextBox>

            <Label>Ange Höjd</Label>
            <TextBox Height="30" Width="230" Name="höjd"></TextBox>

            <Button Margin="20" Height="40" Width="220" Click="KalkyleraArea">Kalkylera</Button>

            <Label>Area</Label>
            <TextBox Height="30" Width="230" Name="area"></TextBox>
            
        </StackPanel>
        
</Window>
